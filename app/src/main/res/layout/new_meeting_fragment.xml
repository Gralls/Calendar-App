<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newMeetingHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Create new meeting"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newMeetingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingHeader"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Insert a title"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/newMeetingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Insert a description"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/newMeetingPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingDescription"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Insert a place"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/newMeetingGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingPlace"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Insert a guests"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/newMeetingStartDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingGuests"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Start date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/newMeetingGuests"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Start time" />

        <DatePicker
            android:id="@+id/newMeetingStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingStartDateLabel"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="-30dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <TimePicker
            android:id="@+id/newMeetingStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/newMeetingStartDateLabel"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="-30dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:timePickerMode="spinner" />


        <CheckBox
            android:id="@+id/meetingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newMeetingStartDate"
            android:layout_centerHorizontal="true"
            android:text="Public"
            android:textSize="20sp" />

        <Button
            android:id="@+id/createNewMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background"
            android:text="SUBMIT"
            android:textColor="#FFFF" />

    </RelativeLayout>
</LinearLayout>